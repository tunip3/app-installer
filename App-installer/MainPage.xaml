<Page
    x:Class="App_installer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_installer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="App Package Installer" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Aileron Thin" FontSize="33" SelectionChanged="TextBlock_SelectionChanged"/>
        <Button x:Name="select_file" Content="Select Main App Package" Height="36" Margin="10,50,0,0" VerticalAlignment="Top" Width="312" Click="Button_Click"/>
        <Button Content="Install app" Margin="10,297,0,0" VerticalAlignment="Top" Height="36" Width="312" Click="Button_Click_1"/>
        <Button Content="Add Dependency" Margin="10,91,0,0" VerticalAlignment="Top" Width="312" Click="Button_Click_2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,168,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,233,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="36" Margin="10,192,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="312" IsEnabled="False"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="35" Margin="10,257,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="312" IsEnabled="False"/>
        <CheckBox x:Name="auth" Content="Authentication" Margin="10,131,0,0" VerticalAlignment="Top" Click="auth_Click"/>
    </Grid>
</Page>
